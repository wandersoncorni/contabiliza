{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laminas/laminas-permissions-rbac": "^3.7",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.1",
        "laravel/tinker": "^2.10.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.8",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\AccessControl\\": "app/access-control/src",
            "App\\Application\\": "app/application/src",
            "App\\Logger\\": "app/logger/src",
            "App\\Admin\\":"app/admin/src",
            "App\\Financial\\":"app/financial/src",
            "App\\AccessControl\\Database\\Factories\\": "app/access-control/database/factories",
            "App\\Application\\Database\\Factories\\": "app/application/database/factories",
            "App\\Admin\\Database\\Factories\\": "app/admin/database/factories",
            "App\\Financial\\Database\\Factories\\": "app/financial/database/factories",
            "App\\AccessControl\\Database\\Seeders\\": "app/access-control/database/seeders",
            "App\\Application\\Database\\Seeders\\": "app/application/database/seeders",
            "App\\Admin\\Database\\Seeders\\": "app/admin/database/seeders",
            "App\\Financial\\Database\\Seeders\\": "app/financial/database/seeders",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },        
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\AccessControl\\Tests\\": "app/access-control/tests",
            "App\\Application\\Tests\\": "app/application/tests",
            "App\\Admin\\Tests\\": "app/admin/tests",
            "App\\Financial\\Tests\\": "app/financial/tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
